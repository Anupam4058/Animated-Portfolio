{
  "name": "anupam-portfolio",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern, responsive portfolio website built with React, Framer Motion, and advanced web technologies",
  "author": "Anupam Kumar Singh <anupamkumarsingh4058@gmail.com>",
  "homepage": "https://anupam-portfolio.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/Anupam4058/Animated-Portfolio.git"
  },
  "keywords": [
    "portfolio",
    "react",
    "framer-motion",
    "pwa",
    "responsive",
    "frontend",
    "developer",
    "ui-ux"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "test": "echo \"No tests specified\" && exit 0",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "dependencies": {
    "@emailjs/browser": "^3.11.0",
    "framer-motion": "^10.16.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.68.0"
  },
  "devDependencies": {
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "4.0.3",
    "eslint": "8.45.0",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.3",
    "prettier": "^3.0.0",
    "vite": "4.4.5",
    "vite-bundle-analyzer": "^0.7.0",
    "gh-pages": "^6.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
